{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
<div class="row">
	<div class="col-md-3 mb-3 text-center border border-2">
		<div class="col-md-12">
			<img src="{{employee.getProfileImage()}}" alt="No Image" id="img" style='width:200px;'>
		</div>
		<div class="col-md-12">
			{{ form_label(form.profile_image, 'Profile Image', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.profile_image, {'attr': {'class': 'form-control', 'onChange':'readURL(this)'}}) }}
			<div class="text-danger">
				{{ form_errors(form.profile_image) }}
			</div>
		</div>
	</div>
	<div class="col-md-9 mb-3">
		<div class="row mb-2">
			<div class="col-md-4">
				{{ form_label(form.first_name, 'First Name', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(form.first_name, {'attr': {'class': 'form-control'}}) }}
				<div class="text-danger">
					{{ form_errors(form.first_name) }}
				</div>
			</div>

			<div class="col-md-4">
				{{ form_label(form.last_name, 'Last Name', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(form.last_name, {'attr': {'class': 'form-control'}}) }}
				<div class="text-danger">
					{{ form_errors(form.last_name) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 mb-2">
				<div class="row mb-2">
					<div class="col-md-4">
						{{ form_label(form.age, 'Age', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
						<div class="text-danger">
							{{ form_errors(form.age) }}
						</div>
					</div>
					<div class="col-md-4">
						{{ form_label(form.gender, 'Gender', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(form.gender, {'attr': {'class': 'form-select'}}) }}
						<div class="text-danger">
							{{ form_errors(form.gender) }}
						</div>
					</div>
				</div>
				<div class="row mb-2">
					<div class="col-md-4">
						{{ form_label(form.aboutMe, 'About Me', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(form.aboutMe, {'attr': {'class': 'form-control'}}) }}
						<div class="text-danger">
							{{ form_errors(form.aboutMe) }}
						</div>
					</div>
					<div class="col-md-4">
						{{ form_label(form.city, 'City', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
						<div class="text-danger">
							{{ form_errors(form.city) }}
						</div>
					</div>
				</div>

				<div class="row mb-2">
					<div class="col-md-4">
						{{ form_label(form.salary, 'Salary', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(form.salary, {'attr': {'class': 'form-control'}}) }}
						<div class="text-danger">
							{{ form_errors(form.salary) }}
						</div>
					</div>
					<div class="col-md-4">
						{{ form_label(form.roles, 'Roles', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(form.roles, {'attr': {'class': 'form-select'}}) }}
						<div class="text-danger">
							{{ form_errors(form.roles) }}
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-12">
				{{ form_label(form.hobby, 'Hobby', {'label_attr': {'class': 'form-label'}}) }}
				<div class="d-flex gap-2">
					{% for choice in form.hobby %}
						<div class="form-check">
							{{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
							{{ form_label(choice, null, {'label_attr': {'class': 'form-check-label'}}) }}
						</div>
					{% endfor %}
				</div>
				<div class="text-danger">
					{{ form_errors(form.hobby) }}
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row mt-4">
	<div class="col-md-12 d-flex justify-content-center gap-2">
		<button type="submit" class="btn btn-primary">{{ button_label}}</button>
		{{ form_end(form) }}
		{% if (button_label == "Update") %}
			<form method="post" action="{{ path('app_employee_delete', {'id': employee.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employee.id) }}">
				<button class="btn btn-danger">Delete</button>
			</form>
		{% endif %}

	</div>
</div>
